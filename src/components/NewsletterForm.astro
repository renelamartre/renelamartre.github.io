---
import { t, type Locale } from '../i18n';

const KIT_FORMS: Record<Locale, { action: string; formId: string; uid: string }> = {
  fr: { action: 'https://app.kit.com/forms/9122139/subscriptions', formId: '9122139', uid: '97c2ff2a89' },
  en: { action: 'https://app.kit.com/forms/9122314/subscriptions', formId: '9122314', uid: 'f23ce848b9' },
  es: { action: 'https://app.kit.com/forms/9122316/subscriptions', formId: '9122316', uid: 'b89d6ef750' },
};

const DATA_OPTIONS = '{"settings":{"after_subscribe":{"action":"message","success_message":"Success! Now check your email to confirm your subscription.","redirect_url":""},"analytics":{"google":null,"fathom":null,"facebook":null,"segment":null,"pinterest":null,"sparkloop":null,"googletagmanager":null},"modal":{"trigger":"timer","scroll_percentage":null,"timer":5,"devices":"all","show_once_every":15},"powered_by":{"show":true,"url":"https://kit.com/features/forms?utm_campaign=poweredby&utm_content=form&utm_medium=referral&utm_source=dynamic"},"recaptcha":{"enabled":false},"return_visitor":{"action":"show","custom_content":""},"slide_in":{"display_in":"bottom_right","trigger":"timer","scroll_percentage":null,"timer":5,"devices":"all","show_once_every":15},"sticky_bar":{"display_in":"top","trigger":"timer","scroll_percentage":null,"timer":5,"devices":"all","show_once_every":15}},"version":"5"}';

interface Props {
  locale: Locale;
}
const { locale } = Astro.props;
const config = KIT_FORMS[locale];
const placeholder = t(locale, 'newsletter.placeholder');
const submitLabel = t(locale, 'newsletter.submit');
---
<section class="newsletter-section">
  <form action={config.action} class="seva-form formkit-form" method="post" data-sv-form={config.formId} data-uid={config.uid} data-format="inline" data-version="5" data-options={DATA_OPTIONS} min-width="400 500 600 700 800">
    <div data-style="clean">
      <ul class="formkit-alert formkit-alert-error" data-element="errors" data-group="alert"></ul>
      <div data-element="fields" data-stacked="false" class="seva-fields formkit-fields">
        <div class="formkit-field">
          <input class="formkit-input" name="email_address" aria-label={placeholder} placeholder={placeholder} required type="email" />
        </div>
        <button data-element="submit" class="formkit-submit formkit-submit" type="submit">
          <div class="formkit-spinner">
            <div></div>
            <div></div>
            <div></div>
          </div>
          <span>{submitLabel}</span>
        </button>
      </div>
      <div class="formkit-powered-by-convertkit-container">
        <a href="https://kit.com/features/forms?utm_campaign=poweredby&utm_content=form&utm_medium=referral&utm_source=dynamic" data-element="powered-by" class="formkit-powered-by-convertkit" data-variant="dark" target="_blank" rel="nofollow">Built with Kit</a>
      </div>
    </div>
  </form>
</section>

<style>
  .newsletter-section {
    margin-bottom: 1.5rem;
  }
</style>

<style is:global>
  .formkit-form[data-uid="97c2ff2a89"] *,
  .formkit-form[data-uid="f23ce848b9"] *,
  .formkit-form[data-uid="b89d6ef750"] * {
    box-sizing: border-box;
  }
  .formkit-form[data-uid="97c2ff2a89"],
  .formkit-form[data-uid="f23ce848b9"],
  .formkit-form[data-uid="b89d6ef750"] {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  .formkit-form[data-uid="97c2ff2a89"] legend,
  .formkit-form[data-uid="f23ce848b9"] legend,
  .formkit-form[data-uid="b89d6ef750"] legend {
    border: none;
    font-size: inherit;
    margin-bottom: 10px;
    padding: 0;
    position: relative;
    display: table;
  }
  .formkit-form[data-uid="97c2ff2a89"] fieldset,
  .formkit-form[data-uid="f23ce848b9"] fieldset,
  .formkit-form[data-uid="b89d6ef750"] fieldset {
    border: 0;
    padding: 0.01em 0 0 0;
    margin: 0;
    min-width: 0;
  }
  .formkit-form[data-uid="97c2ff2a89"] .formkit-input,
  .formkit-form[data-uid="97c2ff2a89"] .formkit-select,
  .formkit-form[data-uid="97c2ff2a89"] .formkit-checkboxes,
  .formkit-form[data-uid="f23ce848b9"] .formkit-input,
  .formkit-form[data-uid="f23ce848b9"] .formkit-select,
  .formkit-form[data-uid="f23ce848b9"] .formkit-checkboxes,
  .formkit-form[data-uid="b89d6ef750"] .formkit-input,
  .formkit-form[data-uid="b89d6ef750"] .formkit-select,
  .formkit-form[data-uid="b89d6ef750"] .formkit-checkboxes {
    width: 100%;
  }
  .formkit-form[data-uid="97c2ff2a89"] .formkit-button,
  .formkit-form[data-uid="97c2ff2a89"] .formkit-submit,
  .formkit-form[data-uid="f23ce848b9"] .formkit-button,
  .formkit-form[data-uid="f23ce848b9"] .formkit-submit,
  .formkit-form[data-uid="b89d6ef750"] .formkit-button,
  .formkit-form[data-uid="b89d6ef750"] .formkit-submit {
    border: 0;
    border-radius: 5px;
    color: var(--color-accent-text);
    cursor: pointer;
    display: inline-block;
    text-align: center;
    font-size: 15px;
    font-weight: 500;
    margin-bottom: 15px;
    overflow: hidden;
    padding: 0;
    position: relative;
    vertical-align: middle;
  }
  .formkit-form[data-uid="97c2ff2a89"] .formkit-input,
  .formkit-form[data-uid="f23ce848b9"] .formkit-input,
  .formkit-form[data-uid="b89d6ef750"] .formkit-input {
    background: var(--color-bg, #fff);
    font-size: 15px;
    padding: 12px;
    border: 1px solid var(--color-border, #e3e3e3);
    flex: 1 0 auto;
    line-height: 1.4;
    margin: 0;
    border-radius: 4px;
    color: var(--color-text);
  }
  .formkit-form[data-uid="97c2ff2a89"] .formkit-input:focus,
  .formkit-form[data-uid="f23ce848b9"] .formkit-input:focus,
  .formkit-form[data-uid="b89d6ef750"] .formkit-input:focus {
    outline: none;
    border-color: var(--color-accent, #1677be);
  }
  .formkit-form[data-uid="97c2ff2a89"] .formkit-submit,
  .formkit-form[data-uid="f23ce848b9"] .formkit-submit,
  .formkit-form[data-uid="b89d6ef750"] .formkit-submit {
    background-color: var(--color-accent, #1677be);
    border-radius: 4px;
  }
  .formkit-form[data-uid="97c2ff2a89"] .formkit-alert,
  .formkit-form[data-uid="f23ce848b9"] .formkit-alert,
  .formkit-form[data-uid="b89d6ef750"] .formkit-alert {
    background: var(--color-bg-muted, #f9fafb);
    border: 1px solid var(--color-border, #e3e3e3);
    border-radius: 5px;
    list-style: none;
    margin: 25px auto;
    padding: 12px;
    text-align: center;
    width: 100%;
  }
  .formkit-form[data-uid="97c2ff2a89"] .formkit-alert:empty,
  .formkit-form[data-uid="f23ce848b9"] .formkit-alert:empty,
  .formkit-form[data-uid="b89d6ef750"] .formkit-alert:empty {
    display: none;
  }
  .formkit-form[data-uid="97c2ff2a89"] .formkit-fields,
  .formkit-form[data-uid="f23ce848b9"] .formkit-fields,
  .formkit-form[data-uid="b89d6ef750"] .formkit-fields {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
    gap: 0.5rem;
  }
  .formkit-form[data-uid="97c2ff2a89"] .formkit-field,
  .formkit-form[data-uid="f23ce848b9"] .formkit-field,
  .formkit-form[data-uid="b89d6ef750"] .formkit-field {
    flex: 1 1 auto;
    min-width: 200px;
  }
  .formkit-form[data-uid="97c2ff2a89"] .formkit-powered-by-convertkit-container,
  .formkit-form[data-uid="f23ce848b9"] .formkit-powered-by-convertkit-container,
  .formkit-form[data-uid="b89d6ef750"] .formkit-powered-by-convertkit-container {
    margin: 10px 0 0;
  }
  .formkit-form[data-uid="97c2ff2a89"] .formkit-powered-by-convertkit,
  .formkit-form[data-uid="f23ce848b9"] .formkit-powered-by-convertkit,
  .formkit-form[data-uid="b89d6ef750"] .formkit-powered-by-convertkit {
    color: var(--color-text-muted);
    font-size: 0.75rem;
  }
</style>
