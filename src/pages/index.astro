---
import LayoutWelcome from '../layouts/LayoutWelcome.astro';
import { t, LOCALES, type Locale } from '../i18n';

const base = import.meta.env.BASE_URL;
const title = 'René La Martre';
const description = 'Site d\'auteur et d\'auto-édition. Découvrez mes livres et le blog.';
---
<LayoutWelcome title={title} description={description}>
  <div class="welcome">
    <img src={`${base}logo.jpg`} alt="" class="welcome-logo" width="200" height="200" />
    <h1 class="welcome-title">{title}</h1>
    <p class="welcome-subtitle">{t('fr', 'welcome.subtitle')}</p>

    <div class="welcome-descriptions">
      {LOCALES.map((locale: Locale) => (
        <div class="welcome-card" key={locale}>
          <p class="welcome-desc">{t(locale, 'welcome.description')}</p>
          <a href={`${base}${locale}/`} class="welcome-btn">{t(locale, 'welcome.enter')}</a>
        </div>
      ))}
    </div>

    <p class="welcome-choose">{t('fr', 'welcome.chooseLanguage')} / {t('en', 'welcome.chooseLanguage')} / {t('es', 'welcome.chooseLanguage')}</p>
    <div class="welcome-langs">
      {LOCALES.map((locale: Locale) => (
        <a href={`${base}${locale}/`} class="welcome-lang" key={locale}>{t(locale, 'welcome.languageName')}</a>
      ))}
    </div>
  </div>
</LayoutWelcome>

<style>
  .welcome {
    text-align: center;
    width: 100%;
  }
  .welcome-logo {
    display: block;
    margin: 0 auto 1rem;
    max-width: 160px;
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 8px;
  }
  .welcome-title {
    margin: 0 0 0.25rem;
    font-size: 1.75rem;
    font-weight: 700;
    letter-spacing: 0.02em;
  }
  .welcome-subtitle {
    margin: 0 0 2rem;
    font-size: 1rem;
    color: var(--color-text-muted);
  }
  .welcome-descriptions {
    display: grid;
    gap: 1rem;
    margin-bottom: 2rem;
    text-align: left;
  }
  .welcome-card {
    padding: 1.25rem;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    background: var(--color-bg-muted);
  }
  .welcome-desc {
    margin: 0 0 1rem;
    font-size: 0.9375rem;
    color: var(--color-text-muted);
  }
  .welcome-btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-accent);
    color: var(--color-accent-text) !important;
    border-radius: 6px;
    font-weight: 500;
    text-decoration: none;
  }
  .welcome-btn:hover {
    background: var(--color-accent-hover);
  }
  .welcome-choose {
    margin: 0 0 0.75rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
  .welcome-langs {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  .welcome-lang {
    padding: 0.6rem 1.25rem;
    background: var(--color-accent);
    color: var(--color-accent-text) !important;
    border-radius: 6px;
    font-weight: 500;
    text-decoration: none;
  }
  .welcome-lang:hover {
    background: var(--color-accent-hover);
  }
  @media (min-width: 480px) {
    .welcome-descriptions {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
